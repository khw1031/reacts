{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": false,
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@states/*": ["states/*"],
      "@typings/*": ["typings/*"],
    }
  }
}
